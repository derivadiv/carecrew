<html>
  <% include partials/head %>
  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Care Crew</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <form class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
          </form>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1>Profile for <%= patient.name %></h1>
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-4">
         
          <h2>Medical information</h2>
          <a class="btn" data-toggle="collapse" data-target="#allergies">Allergies &raquo;</a>
          <p class="collapse" id="allergies"><%=patient.allergies ? patient.allergies : 'Unknown :('%></p>

          <a class="btn" data-toggle="collapse" data-target="#notes">Notes &raquo;</a>
          <p class="collapse" id="notes"><%=patient.notes ? patient.notes : 'Unknown :('%></p>


          <h2>Bio</h2>

          <a class="btn" data-toggle="collapse" data-target="#birthday">Birthday &raquo;</a>
          <p class="collapse" id="birthday"><%=patient.birthday ? patient.birthday : 'Unknown :('%></p>

          <a class="btn" data-toggle="collapse" data-target="#gender">Gender &raquo;</a>
          <p class="collapse" id="gender"><%=patient.gender ? patient.gender : 'Unknown :('%></p>

          <h2>Contact</h2>

          <a class="btn" data-toggle="collapse" data-target="#phone">Phone number &raquo;</a>
          <p class="collapse" id="phone"><%=patient.phone ? patient.phone : 'Unknown :('%></p>

          <a class="btn" data-toggle="collapse" data-target="#email">Email &raquo;</a>
          <p class="collapse" id="email"><%=patient.email ? patient.email : 'Unknown :('%></p>

        </div>

        <div class="col-md-4">
          <!-- TODO display list of names (not stored ids) and add new ones-->
          <h2> Caregivers </h2>
          <h2> Tasks </h2>
        </div>

      </div>

    </div> <!-- /container -->

    <% include partials/footer %>
</body>
</html>
